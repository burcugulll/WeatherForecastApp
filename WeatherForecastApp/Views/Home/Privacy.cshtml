@model WeatherForecastApp.ViewModels.UserUpdateViewModel

@{
    ViewData["Title"] = "Hesap Ayarları";
}

<h2>Hesap Ayarları</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<form asp-controller="Account" asp-action="Privacy" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordAgain" class="control-label"></label>
        <input asp-for="PasswordAgain" type="password" class="form-control" />
        <span asp-validation-for="PasswordAgain" class="text-danger"></span>
    </div>
    @* <div class="form-group">
        <label asp-for="DefaultCityName" class="control-label"></label>
        <input asp-for="DefaultCityName" class="form-control" />
        <span asp-validation-for="DefaultCityName" class="text-danger"></span>
    </div> *@
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

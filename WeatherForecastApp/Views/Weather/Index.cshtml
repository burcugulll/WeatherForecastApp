@model IEnumerable<WeatherForecastApp.Models.WeatherInfo>

<h1 class="mb-4">Filtrelenmiş Hava Durumu</h1>

<form asp-action="FilterWeatherInfo" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label for="weatherDate" class="form-label">Tarih:</label>
        <input type="date" id="weatherDate" name="weatherDate" class="form-control" required />
    </div>
    <div class="col-md-4">
        <label for="cityName" class="form-label">Şehir:</label>
        <input type="text" id="cityName" name="cityName" class="form-control" placeholder="Şehir" required />
    </div>
    <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Filtrele
        </button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Tarih</th>
                <th scope="col">Şehir</th>
                <th scope="col">Sıcaklık</th>
                <th scope="col">Hava Durumu</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var weatherInfo in Model)
            {
                <tr>
                    <td>@weatherInfo.WeatherDate.ToShortDateString()</td>
                    <td>@weatherInfo.CityName</td>
                    <td>@weatherInfo.Temperature °C</td>
                    <td>
                        @weatherInfo.MainStatus
                        <img src="@weatherInfo.Icon" alt="Weather Icon" width="50" height="50" />
                    </td>
                    <td>
                        <form asp-action="DeleteWeatherInfo" method="post" class="d-inline">
                            <input type="hidden" name="weatherInfoId" value="@weatherInfo.WeatherInfoId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-4" role="alert">
        <i class="bi bi-exclamation-circle"></i> Girilen tarih ve şehir bilgisine ait hava durumu bulunamadı.
    </div>
}


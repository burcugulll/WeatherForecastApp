@model WeatherForecastApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <div class="alert alert-warning text-center">
        @ViewBag.Message
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h5>Giriş Yap</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="UserName">Kullanıcı Adı:</label>
                            <input asp-for="UserName" type="text" id="UserName" name="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label for="Password">Şifre:</label>
                            <input asp-for="Password" type="password" id="Password" name="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
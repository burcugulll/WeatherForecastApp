@model IEnumerable<WeatherForecastApp.Models.WeatherInfo>

<h1 class="mb-4">Hava Durumu Yönetimi</h1>

<div class="d-flex align-items-center mb-4">
    <form asp-controller="Weather" asp-action="FilterWeatherInfo" method="get" class="d-flex align-items-center w-100">
        <div class="me-2 flex-grow-1">
            <input type="date" name="weatherDate" class="form-control" placeholder="Tarih seçin" required />
        </div>
        <div class="me-2 flex-grow-1">
            <input type="text" name="cityName" class="form-control" placeholder="Şehir girin" required />
        </div>
        <div>
            <button type="submit" class="btn btn-primary d-flex align-items-center">
                <i class="bi bi-search me-2"></i> Filtrele
            </button>
        </div>
    </form>
    <div class="ms-auto">
        <button id="addWeatherButton" class="btn btn-success d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#addWeatherModal">
            <i class="bi bi-plus me-2"></i> Yeni Ekle
        </button>
    </div>
</div>

<!-- Modal for Adding Weather Info -->
<div class="modal fade" id="addWeatherModal" tabindex="-1" aria-labelledby="addWeatherModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addWeatherModalLabel">Yeni Hava Durumu Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Weather" asp-action="AddWeatherInfo" method="post">
                    <div class="mb-3">
                        <label for="WeatherDate" class="form-label">Tarih:</label>
                        <input type="date" name="weatherDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="CityName" class="form-label">Şehir:</label>
                        <input type="text" name="cityName" class="form-control" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Weather Info Table -->
<table class="table table-striped table-bordered table-hover mt-4">
    <thead class="table-dark">
        <tr>
            <th scope="col">Tarih</th>
            <th scope="col">Şehir</th>
            <th scope="col">Sıcaklık</th>
            <th scope="col">Hava Durumu</th>
            <th scope="col">İşlemler</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var weatherInfo in Model)
        {
            <tr>
                <td>@weatherInfo.WeatherDate.ToShortDateString()</td>
                <td>@weatherInfo.CityName</td>
                <td>@weatherInfo.Temperature °C</td>
                <td>
                    @weatherInfo.MainStatus
                    <img src="@weatherInfo.Icon" alt="Weather Icon" width="50" height="50" />
                </td>

                <td>
                    <form asp-controller="Weather" asp-action="DeleteWeatherInfo" method="post" class="d-inline">
                        <input type="hidden" name="weatherInfoId" value="@weatherInfo.WeatherInfoId" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
